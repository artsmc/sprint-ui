          "required": true,
          "min": 1,
          "max": 120
        },
        {
          "name": "avatar",
          "type": "file",
          "required": false,
          "maxSelect": 1,
          "maxSize": 5242880,
          "mimeTypes": ["image/jpeg", "image/png", "image/gif", "image/webp"]
        },
        {
          "name": "role",
          "type": "select",
          "required": true,
          "maxSelect": 1,
          "values": ["designer", "admin"]
        }
      ],
      "listRule": "@request.auth.id != ''",
      "viewRule": "@request.auth.id != ''",
