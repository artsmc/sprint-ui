      "deleteRule": "@request.auth.id = id && @request.auth.role = 'admin'",
      "authRule": "",
      "manageRule": null,
      "authAlert": {
        "enabled": false
      },
      "oauth2": {
        "enabled": true
      },
      "passwordAuth": {
        "enabled": true,
        "identityFields": ["email"]
      },
      "mfa": {
        "enabled": false
      },
      "otp": {
        "enabled": false
      },
      "authToken": {
        "duration": 1209600
      },
      "passwordResetToken": {
        "duration": 1800
      },
      "emailChangeToken": {
        "duration": 1800
      },
      "verificationToken": {
        "duration": 604800
      },
      "fileToken": {
        "duration": 180
      },
      "verificationTemplate": {
        "subject": "Verify your Sprint UI email",
        "body": "<p>Hello,</p>\n<p>Click on the button below to verify your email address.</p>\n<p><a class=\"btn\" href=\"{APP_URL}/_/#/auth/confirm-verification/{TOKEN}\" target=\"_blank\" rel=\"noopener\">Verify</a></p>\n<p>Thanks,<br/>Sprint UI team</p>"
      },
      "resetPasswordTemplate": {
        "subject": "Reset your Sprint UI password",
        "body": "<p>Hello,</p>\n<p>Click on the button below to reset your password.</p>\n<p><a class=\"btn\" href=\"{APP_URL}/_/#/auth/confirm-password-reset/{TOKEN}\" target=\"_blank\" rel=\"noopener\">Reset password</a></p>\n<p>Thanks,<br/>Sprint UI team</p>"
      },
      "confirmEmailChangeTemplate": {
        "subject": "Confirm your Sprint UI new email",
        "body": "<p>Hello,</p>\n<p>Click on the button below to confirm your new email address.</p>\n<p><a class=\"btn\" href=\"{APP_URL}/_/#/auth/confirm-email-change/{TOKEN}\" target=\"_blank\" rel=\"noopener\">Confirm new email</a></p>\n<p>Thanks,<br/>Sprint UI team</p>"
